{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"rootDir": "./src",
		"outDir": "./build",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"typeRoots": ["./src/types", "node_modules/@types"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
